<Page x:Class="myProjectC.standbyScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:myProjectC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="standbyScreen">

    <Grid Background="White">
        <Label Content="테이블 상황" FontSize="24" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="144" Margin="10,10,0,0"/>
        <Button Content="테이블 추가" HorizontalAlignment="Left" Height="48" Margin="422,10,0,0" VerticalAlignment="Top" Width="169" Click="AddTable_Button_Click"/>
        <Button Content="테이블 삭제" HorizontalAlignment="Left" Height="48" Margin="596,10,0,0" VerticalAlignment="Top" Width="169" Click="DeleteTable_Button_Click"/>
        <!-- 테이블을 동적으로 추가할 컨테이너 -->
        <UniformGrid x:Name="TableGrid" Rows="2" Columns="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" />
        
    </Grid>
    
    
</Page>
